<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomCardCorners"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvTitleSharingCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/GreyLight"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/tvSharingCode"
                style="@style/text"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivCopyTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_margin="10dp"
                android:background="@drawable/ic_copy"
                android:backgroundTint="@color/icons" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvSharingCodeCopied"
            style="@style/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡Copiado!"
            android:visibility="gone" />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>